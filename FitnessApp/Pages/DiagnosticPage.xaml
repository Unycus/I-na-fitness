<Page x:Class="FitnessApp.Pages.DiagnosticPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Диагностика">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Диагностика системы" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <Button Content="Проверить подключение к БД" Click="BtnCheckDb_Click" 
                   Background="#FF2196F3" Foreground="White" Padding="15,10" 
                   HorizontalAlignment="Left" Margin="0,0,0,20"/>

            <TextBlock x:Name="txtDbStatus" Text="Статус: Не проверено" Margin="0,0,0,10"/>
            <TextBlock x:Name="txtDbDetails" TextWrapping="Wrap" Margin="0,0,0,20"/>

            <Button Content="Проверить таблицы" Click="BtnCheckTables_Click" 
                   Background="#FF2196F3" Foreground="White" Padding="15,10" 
                   HorizontalAlignment="Left" Margin="0,0,0,20"/>

            <TextBlock x:Name="txtTablesStatus" Text="Статус таблиц: Не проверено" Margin="0,0,0,10"/>
            <TextBlock x:Name="txtTablesDetails" TextWrapping="Wrap" Margin="0,0,0,20"/>

            <Button Content="Пересоздать базу данных" Click="BtnRecreateDb_Click" 
                   Background="#FFF44336" Foreground="White" Padding="15,10" 
                   HorizontalAlignment="Left" Margin="0,0,0,20"/>

            <TextBlock x:Name="txtRecreateStatus" TextWrapping="Wrap" Margin="0,0,0,20"/>
        </StackPanel>
    </ScrollViewer>
</Page>