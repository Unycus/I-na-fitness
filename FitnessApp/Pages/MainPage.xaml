<Page x:Class="FitnessApp.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Услуги">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и фильтры -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Наши услуги" FontSize="28" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Категория:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="cmbCategory" SelectionChanged="CmbCategory_SelectionChanged"
                         Width="200" Height="30" VerticalAlignment="Center">
                    <ComboBoxItem Content="Все категории" IsSelected="True"/>
                    <ComboBoxItem Content="Йога"/>
                    <ComboBoxItem Content="Кардио"/>
                    <ComboBoxItem Content="Силовые"/>
                    <ComboBoxItem Content="Бассейн"/>
                </ComboBox>

                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                <TextBox x:Name="txtSearch" Width="200" Height="30" 
                        Padding="5" TextChanged="TxtSearch_TextChanged"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Карточки услуг -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ServicesItemsControl" Margin="20,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" 
                               Margin="10" Background="White" 
                               CornerRadius="5" Width="280" Height="320">
                            <StackPanel>
                                <Border Background="#F5F5F5" Height="120" CornerRadius="5,5,0,0">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Category}" 
                                                  HorizontalAlignment="Center"
                                                  Foreground="#666" FontSize="12"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Name}" 
                                                  HorizontalAlignment="Center"
                                                  FontWeight="Bold" TextWrapping="Wrap"
                                                  TextAlignment="Center" Margin="10,0"/>
                                    </StackPanel>
                                </Border>
                                <StackPanel Margin="15">
                                    <TextBlock Text="{Binding Description}" 
                                              TextWrapping="Wrap" Height="60"
                                              Foreground="#666" Margin="0,0,0,10"/>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock HorizontalAlignment="Left">
                                                <TextBlock.Text>
                                                    <Binding Path="Price" StringFormat="Стоимость: {0}₽"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock Margin="0,5,0,0" Foreground="#666" HorizontalAlignment="Left">
                                                <TextBlock.Text>
                                                    <Binding Path="Duration" StringFormat="Длительность: {0} мин"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                    <Button Content="Купить" 
                                           Click="BuyButton_Click"
                                           Tag="{Binding ServiceId}"
                                           Background="#FF4CAF50" 
                                           Foreground="White"
                                           Height="30"
                                           FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>