<Window x:Class="FitnessApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фитнес-клуб - Вход" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Логин" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,15" Padding="5"/>

            <Button x:Name="btnLogin" Content="Войти" Height="35" 
                   Click="BtnLogin_Click" Background="#FF4CAF50" 
                   Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

            <Button x:Name="btnRegister" Content="Регистрация" Height="30" 
                   Click="BtnRegister_Click" 
                   Background="Transparent" 
                   BorderBrush="#FF4CAF50" 
                   BorderThickness="1"
                   Foreground="#FF4CAF50"
                   Margin="0,10,0,10"/>

            <!-- Кнопка аварийного доступа -->
            <Button x:Name="btnEmergency" Content="Аварийный доступ (создать БД)" 
                   Height="30" Click="BtnEmergency_Click"
                   Background="Transparent" 
                   BorderBrush="#FF9800" 
                   BorderThickness="1"
                   Foreground="#FF9800"
                   Margin="0,10,0,10"/>

            <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap"
                      Margin="0,15,0,0" Visibility="Collapsed" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>