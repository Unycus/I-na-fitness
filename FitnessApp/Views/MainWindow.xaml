<Window x:Class="FitnessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фитнес-клуб" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="#FF4CAF50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="💪 Фитнес-клуб" 
                          Foreground="White" FontSize="20" FontWeight="Bold"
                          VerticalAlignment="Center"/>

                <TextBlock x:Name="txtWelcome" Grid.Column="1" 
                          Foreground="White" FontSize="14"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Button x:Name="btnLogout" Grid.Column="2" Content="Выйти"
                       Click="BtnLogout_Click" Background="Transparent"
                       Foreground="White" BorderThickness="0" Padding="10,5"/>
            </Grid>
        </Border>

        <!-- Основная область с навигацией -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель навигации -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <TextBlock Text="Меню" FontWeight="Bold" FontSize="16" Margin="0,0,0,20"/>

                    <Button x:Name="btnServices" Content="Услуги" Tag="Services"
                           Click="NavButton_Click" Style="{StaticResource NavButtonStyle}"
                           Margin="0,5"/>

                    <Button x:Name="btnUser" Content="Личный кабинет" Tag="User"
                           Click="NavButton_Click" Style="{StaticResource NavButtonStyle}"
                           Margin="0,5"/>

                    <Button x:Name="btnSettings" Content="Настройки" Tag="Settings"
                           Click="NavButton_Click" Style="{StaticResource NavButtonStyle}"
                           Margin="0,5"/>
                    
                    <Button x:Name="btnDiagnostic" Content="Диагностика" Tag="Diagnostic"
                           Click="BtnDiagnostic_Click" Style="{StaticResource NavButtonStyle}"
                           Margin="0,5"/>
                </StackPanel>
            </Border>

            <!-- Область контента - здесь находится MainFrame -->
            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>

        <!-- Нижний колонтитул -->
        <Border Grid.Row="2" Background="#EEE" Padding="10">
            <TextBlock Text="© 2024 Фитнес-клуб. Все права защищены." 
                      HorizontalAlignment="Center" Foreground="#666"/>
        </Border>
    </Grid>
</Window>