<Window x:Class="FitnessApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Логин*" Margin="0,5"/>
                <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Пароль*" Margin="0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Подтверждение пароля*" Margin="0,5"/>
                <PasswordBox x:Name="txtConfirmPassword" Height="30" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Email" Margin="0,5"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="ФИО*" Margin="0,5"/>
                <TextBox x:Name="txtFullName" Height="30" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Телефон" Margin="0,5"/>
                <TextBox x:Name="txtPhone" Height="30" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Дата рождения" Margin="0,5"/>
                <DatePicker x:Name="dpBirthDate" Margin="0,0,0,20" Height="30"/>

                <Button x:Name="btnRegister" Content="Зарегистрироваться" 
                       Height="35" Click="BtnRegister_Click"
                       Background="#FF4CAF50" Foreground="White" 
                       FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Исправленная кнопка отмены -->
                <Button x:Name="btnCancel" Content="Отмена" 
                       Height="30" Click="BtnCancel_Click"
                       Background="Transparent" 
                       BorderBrush="#666" 
                       BorderThickness="1"
                       Foreground="#666"/>

                <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap"
                          Margin="0,15,0,0" Visibility="Collapsed" TextAlignment="Center"/>

                <TextBlock Text="* - обязательные поля" Foreground="Gray" 
                          FontSize="10" Margin="0,10,0,0" TextAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>